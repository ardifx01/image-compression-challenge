generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Uploads {
  id Int @id @default(autoincrement())
  code String @unique @default(uuid())

  name String
  type String
  width Int
  height Int

  originalSize Int
  originalImage String

  optimizedSize Int
  optimizedImage String
  
  thumbnail String
  thumbnailSize Int
  thumbnailWidth Int
  thumbnailHeight Int

  createdAt DateTime @default(now())
}